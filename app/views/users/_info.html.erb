    <%= image_tag user.get_profile_image, size: ('100x100') %>
  </tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th>
      <%= link_to user.followings.count, user_followings_path(user)%>
      <!--上サンプルコード参照-->
